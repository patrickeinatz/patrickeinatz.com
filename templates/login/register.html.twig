{% extends 'base.html.twig' %}
{% form_theme registrationForm _self %}

{% block form_row %}
    {%- set widget_attr = {} -%}
    {%- if help is not empty -%}
        {%- set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
    {%- endif -%}

    {{- form_label(form, null, {
        label_attr: {class: 'sr-only'}
    }) -}}
    {{- form_errors(form) -}}
    {{- form_widget(form, widget_attr) -}}
    {{- form_help(form) -}}

{% endblock %}

{% block _user_registration_type_form_agreeTerms_row %}
    <div class="form-group">
        {{ form_errors(form) }}
        <small>
            <label for="agreeTerms">
                <input type="checkbox" id="agreeTerms" name="{{ full_name }}">
                <span class="form-checkbox-label">Agree the terms I for sure read</span>
            </label>
        </small>
    </div>
{% endblock %}

{% block title %}{{ title }}{% endblock %}
        {% block jumbotron_sm %}<h1>{{ title }}</h1>{% endblock %}
{% block content_sm_center %}

    {{ form_start(registrationForm, {attr: {class: 'form'} }) }}

        {{ form_row(registrationForm.email,
            {attr: {
                class: 'form-input form-control',
                placeholder: 'mail'
            }
        }) }}

        {{ form_row(registrationForm.plainPassword,
            {attr: {
                class: 'form-input form-control',
                placeholder: 'password'
            }
        }) }}

        {{ form_row(registrationForm.agreeTerms) }}
    <button type="submit" class="login-button btn">
        register
    </button>
    {{ form_end(registrationForm) }}

{% endblock %}