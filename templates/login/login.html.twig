{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}
        {% block jumbotron_sm %}<h1>{{ title }}</h1>{% endblock %}
{% block content_sm_center %}
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form method="post" class="login-form">
                <div class="form-group">
                    <input type="email" class="login-form-input form-control" id="email" name="email" placeholder="mail" value="{{ last_usermail }}" required autofocus/>
                </div>
                <div class="form-group">
                    <input type="password" class="login-form-input form-control" id="password" name="password" placeholder="secret" />
                </div>
                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}
                <div class="form-group-centered">
                    <button type="submit" id="sendlogin" class="login-button btn">login</button>
                </div>
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>

{% endblock %}