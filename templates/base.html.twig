<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/style.css') }}" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/timeline.css') }}">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('images/fav/apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('images/fav/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('images/fav/favicon-16x16.png') }}">
        <link rel="manifest" href="{{ asset('images/fav/site.webmanifest') }}">
    </head>
    <body>
    {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
        <div class="alert alert-warning" style="margin-top: 20px; margin-bottom: 0px">
            You are currently switched to this user.
            <a href="{{ path('index', {
                '_switch_user': '_exit'
            }) }}">Exit Impersonation</a>
        </div>
    {% endif %}
    <nav class="navbar navbar-toggleable-md navbar-light fixed-top bg-faded">
        <!--### navbar centered <div class="container"> -->
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="{{ path('index') }}"><span> patrickeinatz<span class="navbar-brand-thin">.com</span></a>
            <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('index') }}"><i class="fas fa-stream"></i> Log</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('data') }}"><i class="fas fa-database"></i> Data</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('archive') }}"><i class="fas fa-archive"></i> Archive</a>
                    </li>
                </ul>
                <div class="navbar-right">
                    <ul class="navbar-nav mr-auto">
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('account') }}"><i class="fas fa-user-circle"></i> <b>{{ app.user.firstname}}'s</b> Account</a></span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('logout') }}"><i class="fas fa-sign-out-alt"></i> Log Out</a>
                            </li>
                            <li class="nav-item">
                                <div class="inset">
                                    <img src="{{ app.user.avatarUrl(100) }}">
                                </div>
                            </li>
                        {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('login') }}">Log In</a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
                <!--
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
                -->
            </div>
       <!--### navbar centered end </div> -->
    </nav>
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-2"></div>
                    <div class="col-md-8">
                        {% block jumbotron_sm %}{% endblock %}
                    </div>
                <div class="col-md-2"></div>
            </div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    {% block jumbotron_md %}{% endblock %}
                </div>
                <div class="col-md-1"></div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    {% block jumbotron_lg %}{% endblock %}
                </div>
            </div>
        </div>
    </div>
    <!-- container -->
    <div class="container">
        <div class="row">
            <div class="col-md-2">{% block content_sm_left %}{% endblock %}</div>
            <div class="col-md-8">
                {% block content_sm_center %}{% endblock %}
            </div>
            <div class="col-md-2">{% block content_sm_right %}{% endblock %}</div>
        </div>
        <div class="row">
            <div class="col-md-1"></div>
                <div class="col-md-10">
                    {% block content_md_center %}{% endblock %}
                </div>
            <div class="col-md-1"></div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% block content_lg_center %}{% endblock %}
            </div>
        </div>
    </div>
    <footer></footer>
    <!-- /container -->
    <script src="{{ asset('js/jquery.slim.min.js') }}"></script>
    <script src="{{ asset('js/tether.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/ie10-viewport-bug-workaround.js') }}"></script>
    <script src="{{ asset('js/news_article.js') }}"></script>
    <script src="{{ asset('js/custom.js') }}"></script>
    {% block javascripts %}{% endblock %}
    </body>
</html>
