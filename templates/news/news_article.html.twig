{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}
{% block jumbotron %}
    <h1>{{ article.title }}</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item active"><a href="{{ path('index') }}">~</a></li>
        <li class="breadcrumb-item active"><a href="{{ path('index') }}">news</a></li>
        <li class="breadcrumb-item">{{ breadcrumb }}_</li>
    </ol>
{% endblock %}
{% block container %}
    <div class="row">
        <div class="col-md-12">
            <h3>{{ article.title }}</h3>
            <p><small>published by {{ article.author }} - {{ article.publishedAt|ago}} - <i class="fab fa-hotjar"></i> {{ article.likes }}</small></p>
            <p>
                {{ article.content|cached_markdown }}
            </p>
        </div>
    </div>
{% endblock %}
